{
  "name": "aya-simulate-mcp",
  "version": "1.0.0",
  "description": "Transaction Simulation Tool for DeFi-Aware AI Agents - MCP Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:client": "tsx src/test/testClient.ts",
    "test:simulate": "tsx src/test/testClient.ts simulate",
    "test:describe": "tsx src/test/testClient.ts describe",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist logs coverage",
    "prepare": "npm run build",
    "prepack": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "defi",
    "ethereum",
    "simulation",
    "blockchain",
    "ai-agent"
  ],
  "author": "Aya AI Global Hackathon",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "tsx": "^4.4.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}